@media screen and (max-width: 800px){
    .main {
        padding-left: rem*2;
        padding-right: rem*2;
        over-flow: hidden;
    }
    #side {
        display: none;
    }
    
}

@media screen and (max-width: 620px){
    .main {
        padding-left: rem*1;
        padding-right: rem*1;
        over-flow: hidden;
    }
    
    .log {
        display: block;
        float: none;
        text-align: center;
        max-width: 540px;
        margin: rem*1;;
        width: 100%;
        color: #000;
    }
    .nav {
        display: block;
        width: 100%;
        margin: 0;
        text-align: center;
    }
}